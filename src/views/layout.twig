    {#<link rel="stylesheet" media="screen" href="{{ app.request.baseUrl }}/css/groundwork.css" />#}
    <link rel="stylesheet" media="screen" href="{{ app.request.baseUrl }}/css/bootstrap.css"/>
    {#<link rel="stylesheet" media="screen" href="{{ app.request.baseUrl }}/css/foundation.css" />#}
    <link rel="stylesheet" media="screen" href="{{ app.request.baseUrl }}/css/screen.css"/>
    <link rel="stylesheet" media="screen" href="{{ app.request.baseUrl }}/css/highslide.css"/>

    <script type="text/javascript" src="{{ app.request.baseUrl }}/js/jquery-1.8.3.js"></script>
    <script type="text/javascript" src="{{ app.request.baseUrl }}/js/jquery-ui.js"></script>
    <script type="text/javascript" src="{{ app.request.baseUrl }}/js/tinymce/tinymce.min.js"></script>
    <script type="text/javascript">
        tinymce.init({
            selector: "textarea"
//            editor_deselector : "mceNoEditor"
        });
    </script>
    <script type="text/javascript" src="{{ app.request.baseUrl }}/js/bootstrap.js"></script>
    <script type="text/javascript" src="{{ app.request.baseUrl }}/js/highslide/highslide.js"></script>

    <script type="text/javascript">
        hs.graphicsDir = '{{ app.request.baseUrl }}/js/highslide/graphics/';
        hs.wrapperClassName = 'wide-border';
    </script>

</head>
<body>

<header>
    <section id="headerContent">
        <a href="{{ path('home') }}"><h1 id='logo'>ImmoSite</h1></a>

        <section id="login">
            {% if user == false %}
                <dl id="logInLinks">
                    <dt></dt>
                    <dd><a href="{{ path('auth.login') }}">Log in</a></dd>
                    <dd><a href="{{ path('auth.register') }}">Register</a></dd>
                </dl>
            {% else %}
                <dl id="loggedIn">
                    <dt></dt>
                    <dd><a href="{{ path('auth.profile') }}">{{ user.name }}</a></dd>
                    <dd id="logout"><a href="{{ path('auth.logout') }}">Log out</a></dd>
                </dl>
            {% endif %}
        </section>
    </section>
</header>

<section role="main">
    {% block pageContent %}
        Hello!
    {% endblock %}
</section>

<footer>&copy; Ewout Merckx</footer>

</body>
</html>