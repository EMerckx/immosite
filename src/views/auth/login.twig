{# extend the parent tpl #}
{% extends 'layout.twig' %}


{# set the pagetitle in the parent tpl #}
{% set pageTitle = 'ImmoSite &raquo; Log In' %}


{# overwrite the pageContent block #}
{% block pageContent %}

    <section class="breadcrumb">
        <p><a href="{{ path('immo.browse') }}">Home</a> &raquo; Please Log In</p>
    </section>

    <section class="content">
        <h2>Log in</h2>

        <form class="clearfix" action="{{ path('auth.login') }}" method="post" {{ form_enctype(loginform) }}
              novalidate="novalidate">{# disable HTML5 formchecking #}
            <dl class="dl-horizontal">
                <dt>
                    <label for="loginform_username">Email address</label>
                </dt>
                <dd>
                    {{ form_widget(loginform.username) }}
                    <div class="text-error">{{ form_errors(loginform.username) }}</div>
                </dd>
                <dt>
                    {{ form_label(loginform.password) }}
                </dt>
                <dd>
                    {{ form_widget(loginform.password) }}
                    <div class="text-error">{{ form_errors(loginform.password) }}</div>
                </dd>
                <dt>
                    &nbsp;
                </dt>
                <dd>
                    {{ form_widget(loginform._token) }}
                    <input class="btn btn-primary" type="submit" name="submit" value="Log in"/>
                </dd>
                <dd>
                    You don't have an account ? <a href="{{ path('auth.register') }}">Register here !</a>
                </dd>
            </dl>
        </form>
    </section>
{% endblock %}